<?xml version="1.0" encoding="UTF-8"?>
<project>
  <description>
     clean targetDirectory
     get missing artifacts from central repository
     compile files from sourceDirectory to outputDirectory
     compile files from testSourceDirectory to testOutputDirectory
     test
     pack files from classesDirectory to targetDirectory/artifactId.type
     pack files from resourcesDirectory to targetDirectory/artifactId.type
     install targetDirectory/artifactId.type in local repository.
  </description>
  <layout>
    <targetDirectory>target</targetDirectory>
    <sourceDirectory>main/java</sourceDirectory>
    <resourceDirectory>main/resources</resourceDirectory>
    <outputDirectory>target/classes</outputDirectory>
    <webappDirectory>main/webapp</webappDirectory>
    <testSourceDirectory>test/java</testSourceDirectory>
    <testResourceDirectory>test/resources</testResourceDirectory>
    <testOutputDirectory>target/test-classes</testOutputDirectory>
    <testReportDirectory>target/test-reports</testReportDirectory>
  </layout>
  <build>clean compile test pack install</build>
  <dependencies>
    <dependency>
      <groupId>nut</groupId>
      <artifactId>testNG</artifactId>
      <version>2.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.testng</groupId>
      <artifactId>testng</artifactId>
      <version>6.8.7</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.beust</groupId>
      <artifactId>jcommander</artifactId>
      <version>1.48</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <repositories>
    <repository>
      <name>Maven Central Repository</name>
      <layout>maven</layout>
      <url>https://repo1.maven.org/maven2</url>
    </repository>
  </repositories>
</project>
