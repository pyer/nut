<?xml version="1.0" encoding="UTF-8"?>
<project>
  <description>
     clean targetDirectory
     pack files from resourceDirectory to targetDirectory/artifactId.zip
     install targetDirectory/artifactId.zip in local repository.
  </description>

  <build>
    <targetDirectory>target</targetDirectory>
    <sourceDirectory>main/java</sourceDirectory>
    <resourceDirectory>main/resources</resourceDirectory>
    <outputDirectory>target/classes</outputDirectory>
    <testSourceDirectory>test/java</testSourceDirectory>
    <testResourceDirectory>test/resources</testResourceDirectory>
    <testOutputDirectory>target/test-classes</testOutputDirectory>
    <testReportDirectory>target/test-reports</testReportDirectory>

    <goals>
      <goal>
        <name>clean</name>
      </goal>
      <goal>
        <name>pack</name>
      </goal>
      <goal>
        <name>install</name>
      </goal>
    </goals>
  </build>

</project>
