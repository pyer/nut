<project>

  <dependencies>
    <dependency>
      <groupId>com.beust</groupId>
      <artifactId>jcommander</artifactId>
      <version>1.7</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.testng</groupId>
      <artifactId>testng</artifactId>
      <version>6.8.7</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <repositories>
    <repository>
      <name>Maven Central Repository</name>
      <layout>maven</layout>
      <url>http://search.maven.org/remotecontent</url>
    </repository>
  </repositories>

  <build>
    <targetDirectory>target</targetDirectory>
    <sourceDirectory>src/java</sourceDirectory>
    <resourceDirectory>src/resources</resourceDirectory>
    <outputDirectory>target/classes</outputDirectory>
    <testSourceDirectory>test/java</testSourceDirectory>
    <testResourceDirectory>test/resources</testResourceDirectory>
    <testOutputDirectory>target/test-classes</testOutputDirectory>
    <testReportDirectory>target/test-reports</testReportDirectory>

    <goals>
      <goal>
        <name>clean</name>
      </goal>
      <goal>
        <name>compile</name>
        <type>java</type>
      </goal>
      <goal>
        <name>test</name>
        <type>TestNG</type>
        <configuration>
          <testSuiteFile>test/testng.xml</testSuiteFile>
        </configuration>
      </goal>
      <goal>
        <name>pack</name>
      </goal>
      <goal>
        <name>install</name>
      </goal>
    </goals>
  </build>

</project>
