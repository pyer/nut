<project>

  <dependencies>
    <dependency>
      <groupId>com.beust</groupId>
      <artifactId>jcommander</artifactId>
      <version>1.7</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.testng</groupId>
      <artifactId>testng</artifactId>
      <version>6.8.7</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <directory>target</directory>
    <outputDirectory>target/classes</outputDirectory>
    <testOutputDirectory>target/test-classes</testOutputDirectory>
    <testReportDirectory>target/test-reports</testReportDirectory>
    <sourceDirectory>src/java</sourceDirectory>
    <testSourceDirectory>test/java</testSourceDirectory>

    <goals>
      <goal>
        <name>clean</name>
      </goal>
      <goal>
        <name>compile</name>
      </goal>
      <goal>
        <name>test</name>
        <configuration>
          <testSuiteFile>test/testng.xml</testSuiteFile>
        </configuration>
      </goal>
      <goal>
        <name>pack</name>
      </goal>
      <goal>
        <name>install</name>
      </goal>
    </goals>
  </build>

</project>
