#!/bin/sh
set -e

cd $(dirname $0)
root=$(pwd)
NUT_VERSION="3.0"
NUT_LOCAL="$HOME/nutRepository"
NUT_REMOTE="http://search.maven.org/remotecontent?filepath="

echo "Build nut local repository"
rm -rf $NUT_LOCAL
mkdir -p $NUT_LOCAL
cp -a localRepository/* $NUT_LOCAL/

cd $root
mkdir -p target/classes
echo "Compiling.."
options="-d $root/target/classes -cp $root/target/classes:$NUT_LOCAL/org/codehaus/plexus/plexus-utils-3.0.jar:$NUT_LOCAL/org/testng/testng-6.8.7.jar -deprecation -Xlint:unchecked"
echo " - logging"
cd src/main/java/logging
javac $options Log.java
echo " - model"
cd ../model
javac $options Dependency.java Project.java ParserException.java ValidationException.java
echo " - goals"
cd ../goals
javac $options packs/util/CopyFiles.java packs/util/ZipFiles.java
javac $options Goal.java GoalException.java Clean.java Compile.java Install.java Pack.java Test.java Run.java packs/Jar.java packs/War.java packs/Zip.java
echo " - interpolation"
cd ../interpolation
javac $options Interpolator.java
echo " - build"
cd ../build
javac $options CyclicProjectException.java DependencyNotFoundException.java DependencyChecker.java DuplicateProjectException.java Scanner.java Sorter.java Builder.java
echo " - nut"
cd ..
javac $options Nut.java

cd $root
echo "Build nut.jar"
mkdir -p $NUT_LOCAL/nut
jar cf $NUT_LOCAL/nut/nut-$NUT_VERSION.jar -C target/classes .
rm -r target

echo "Build nut script"
cat <<EOF >nut
#!/bin/bash
# Nut start up script
# ----------------------------------------------------------------------------
export NUT_VERSION=$NUT_VERSION
export NUT_LOCAL=$NUT_LOCAL
export NUT_REMOTE=$NUT_REMOTE
java -Xmx512M -classpath \$NUT_LOCAL/nut/nut-\$NUT_VERSION.jar:\$NUT_LOCAL/org/codehaus/plexus/plexus-utils-3.0.jar:\$NUT_LOCAL/com/beust/jcommander-1.48.jar:\$NUT_LOCAL/org/testng/testng-6.8.7.jar nut.Nut "-Dversion=\$NUT_VERSION" "-Dlocal=\$NUT_LOCAL" "-Dremote=\$NUT_REMOTE" \$*
EOF

echo "Install /usr/bin/nut'"
chmod +x nut
sudo install nut /usr/bin/
rm nut
echo "Done."
