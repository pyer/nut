<?xml version="1.0" encoding="UTF-8"?>
<project>
  <description>
     clean targetDirectory
     get missing artifacts from central repository
     compile files from sourceDirectory to outputDirectory
     compile files from testSourceDirectory to testOutputDirectory
     test
     pack files from outputDirectory to targetDirectory/artifactId.type
     install targetDirectory/artifactId.type in local repository.
  </description>

  <dependencies>
    <dependency>
      <groupId>com.beust</groupId>
      <artifactId>jcommander</artifactId>
      <version>1.7</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>nut</groupId>
      <artifactId>testNG</artifactId>
      <version>2.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.testng</groupId>
      <artifactId>testng</artifactId>
      <version>6.8.7</version>
      <scope>test</scope>
    </dependency>  </dependencies>

  <repositories>
    <repository>
      <name>Maven Central Repository</name>
      <layout>maven</layout>
      <url>https://repo1.maven.org/maven2</url>
    </repository>
  </repositories>

  <build>
    <targetDirectory>target</targetDirectory>
    <sourceDirectory>src/java</sourceDirectory>
    <resourceDirectory>src/resources</resourceDirectory>
    <outputDirectory>target/classes</outputDirectory>
    <testSourceDirectory>test/java</testSourceDirectory>
    <testResourceDirectory>test/resources</testResourceDirectory>
    <testOutputDirectory>target/test-classes</testOutputDirectory>
    <testReportDirectory>target/test-reports</testReportDirectory>

    <goals>
      <goal>
        <name>clean</name>
      </goal>
      <goal>
        <name>compile</name>
        <type>java</type>
      </goal>
      <goal>
        <name>test</name>
        <type>NG</type>
        <configuration>
          <testSuiteFile>test/testng.xml</testSuiteFile>
        </configuration>
      </goal>
      <goal>
        <name>pack</name>
      </goal>
      <goal>
        <name>install</name>
      </goal>
    </goals>
  </build>

</project>
